{
    "openapi": "3.0.0",
    "info": {
        "title": "Pet Testing",
        "version": "1.0.0"
    },
    "paths": {
        "/Pets": {
            "get": {
                "description": "Returns list of all pets.\n",
                "responses": {
                    "200": {
                        "description": "Array of pets",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pet"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "http://localhost:8080/v1"
        }
    ],
    "components": {
        "schemas": {
            "Pet": {
                "type": "object",
                "discriminator": {
                    "propertyName": "petType"
                },
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "petType": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "petType"
                ]
            },
            "Cat": {
                "description": "A representation of a cat",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Pet"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "huntingSkill": {
                                "type": "string",
                                "description": "The measured skill for hunting",
                                "default": "lazy",
                                "enum": [
                                    "clueless",
                                    "lazy",
                                    "adventurous",
                                    "aggressive"
                                ]
                            }
                        },
                        "required": [
                            "huntingSkill"
                        ]
                    }
                ]
            },
            "Lion": {
                "description": "A particular type of a cat",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Cat"
                    }
                ]
            },
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "string"
                    }
                }
            }
        }
    }
}